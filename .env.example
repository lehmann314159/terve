PORT=3333
HOST=localhost
NODE_ENV=development

# Application key for encryption
APP_KEY=your-32-character-secret-key-here

# Database configuration
DB_CONNECTION=sqlite
DB_DATABASE=./tmp/terve_app.sqlite

# For production with PostgreSQL
# DB_CONNECTION=pg
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_DATABASE=terve_app

# Session configuration
SESSION_DRIVER=cookie
SESSION_COOKIE_NAME=terve_session

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Redis configuration (if using Redis for sessions/cache)
REDIS_CONNECTION=local
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Story generation service
# If using Claude API for story generation
CLAUDE_API_KEY=your-claude-api-key

# CORS configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,POST,DELETE
CORS_HEADERS=Content-Type,Accept,Authorization

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info

# File uploads
MAX_FILE_SIZE=10mb

# Email configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@terve-app.com
MAIL_FROM_NAME="Terve App"
